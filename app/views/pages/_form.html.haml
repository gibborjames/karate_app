%h4 Form

.registrationForm
  = form_for (@user) do |form|
    .firstname
      = form.label :firstname
      = form.text_field :firstname
    .middlename
      = form.label :middlename
      = form.text_field :middlename
    .lastname
      = form.label :lastname
      = form.text_field :lastname
    .facebook_account
      = form.label :facebook_account
      = form.text_field :facebook_account
    .email
      = form.label :email
      = form.email_field :email
      = form.hidden_field :password, value: SecureRandom.hex(5)
    .registrationBtn
      = form.submit "Submit"
